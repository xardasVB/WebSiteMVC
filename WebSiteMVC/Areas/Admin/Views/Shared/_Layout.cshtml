@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin @ViewBag.Title</title>

    <link href="~/Areas/Admin/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/custom.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/styles.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div id="wrapper">
            <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="index.html">Binary admin</a>
                </div>
                <div style="color: white;
                        padding: 15px 50px 5px 50px;
                        float: right;
                        font-size: 16px;">
                    Last access : 30 May 2014 &nbsp;
                    <a href="#" class="btn btn-danger square-btn-adjust">Logout</a>
                </div>
            </nav>
            <!-- /. NAV TOP  -->
            <nav class="navbar-default navbar-side" role="navigation">
                <div class="sidebar-collapse">
                    <ul class="nav" id="main-menu">
                        <li class="text-center">
                            <img src="~/Areas/Admin/images/find_user.png" class="user-image img-responsive" />
                        </li>

                        <li>
                            <a class="menulinks @((ViewBag.Dashboard == true) ? "active-menu" : "")" href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard fa-3x"></i>Dashboard</a>
                        </li>
                        <li>
                            <a class="@((ViewBag.Dashboard != true) ? "active-menu" : "")" href="#"><i class="fa fa-sitemap fa-3x"></i> Tables<span class="fa arrow fa-2x"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a class="menulinks @((ViewBag.MenuCountry != null) ? "active-menu-inner" : "")" href="@Url.Action("Index", "Country")">Countries</a>
                                </li>
                                <li>
                                    <a class="menulinks @((ViewBag.MenuCity != null) ? "active-menu-inner" : "")" href="@Url.Action("Index", "City")">Cities</a>
                                </li>
                                <li>
                                    <a class="menulinks @((ViewBag.MenuHotel != null) ? "active-menu-inner" : "")" href="@Url.Action("Index", "Hotel")">Hotels</a>
                                    @*<a href="#">Second Level Link<span class="fa arrow"></span></a>
                                        <ul class="nav nav-third-level">
                                            <li>
                                                <a href="#">Third Level Link</a>
                                            </li>
                                            <li>
                                                <a href="#">Third Level Link</a>
                                            </li>
                                            <li>
                                                <a href="#">Third Level Link</a>
                                            </li>

                                        </ul>*@

                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="ui.html"><i class="fa fa-desktop fa-3x"></i> UI Elements</a>
                        </li>
                        <li>
                            <a href="tab-panel.html"><i class="fa fa-qrcode fa-3x"></i> Tabs & Panels</a>
                        </li>
                        <li>
                            <a href="chart.html"><i class="fa fa-bar-chart-o fa-3x"></i> Morris Charts</a>
                        </li>
                        <li>
                            <a href="table.html"><i class="fa fa-table fa-3x"></i> Table Examples</a>
                        </li>
                        <li>
                            <a href="form.html"><i class="fa fa-edit fa-3x"></i> Forms </a>
                        </li>
                        <li>
                            <a href="blank.html"><i class="fa fa-square-o fa-3x"></i> Blank Page</a>
                        </li>
                    </ul>

                </div>

            </nav>
            <!-- /. NAV SIDE  -->
            <div id="page-wrapper">
                <div class="row" id="page-inner">
                    <div class="menulinks @((ViewBag.Dashboard != true) ? "col-md-6" : "")">
                        @RenderBody()
                    </div>
                </div>
                <!-- /. PAGE INNER  -->
            </div>
            <!-- /. PAGE WRAPPER  -->
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Areas/Admin/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Areas/Admin/Scripts/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Scripts/jquery.metisMenu.js"></script>
    <script src="~/Areas/Admin/Scripts/morris/raphael-2.1.0.min.js"></script>
    <script src="~/Areas/Admin/Scripts/morris/morris.js"></script>
    <script src="~/Areas/Admin/Scripts/custom.js"></script>
    <script src="~/Areas/Admin/Scripts/myScript.js"></script>
</body>
</html>
